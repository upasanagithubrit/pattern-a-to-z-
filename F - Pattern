#include <iostream> 
using namespace std; 

int height = 5; 
int width = (2 * height) - 1; 

void printF() 
{ 
    int i, j; 
    for (i = 0; i < height; i++) { 
        cout <<"*"; 
        for (j = 0; j < height; j++) { 
            if ((i == 0 || i == height) 
                || (i == height  /2
                    && j <= height )) 
                cout <<"*"; 
            else
                continue; 
        } 
        cout <<"\n"; 
    } 
} 

int main() 
{ 
    printF() ;
    return 0; 
} 
  
